<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true">
      <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
         <solid android:color="@color/button_fill_pressed"></solid>
         <!--corners android:radius="8px"></corners-->
         <stroke android:width="2dp" android:color="@color/button_border"></stroke>
      </shape>
   </item>
   <item android:state_pressed="false">//means normal
      <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
         <solid android:color="@color/button_fill"></solid>
         <!--corners android:radius="8px"></corners-->
         <stroke android:width="2dp" android:color="@color/button_border"></stroke>
      </shape>
   </item>
</selector>
